---
import Footer from '@/components/ui/footer/Footer.astro';
import Header from '@/components/ui/header/Header.astro';
import Base from './Base.astro';
---

<Base>
  <div class="wrapper xl:container xl:mx-auto">
    <Header />

    <main class="flex-auto px-6" role="main">
      <slot />
    </main>

    <Footer />
  </div>
</Base>

<style>
  .wrapper {
    display: flex;
    height: 100%;
    min-height: 100vh;
    flex-direction: column;
  }
</style>
